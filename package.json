{
  "name": "awcp-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Agent Workspace Collaboration Protocol - Monorepo",
  "workspaces": [
    "packages/*",
    "experiments/shared/*",
    "experiments/scenarios/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build -w @awcp/core && npm run build -w @awcp/transport-sshfs && npm run build -w @awcp/transport-archive && npm run build -w @awcp/transport-storage && npm run build -w @awcp/transport-git && npm run build -w @awcp/sdk && npm run build -w @awcp/mcp && npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test -w @awcp/core -w @awcp/transport-sshfs -w @awcp/transport-archive -w @awcp/transport-storage -w @awcp/transport-git -w @awcp/sdk -w @awcp/mcp",
    "lint": "eslint packages/*/src/**/*.ts",
    "typecheck": "tsc --build --noEmit",
    "skill:build": "cd skill && zip -r awcp-skill.zip awcp-skill -x '*.DS_Store'",
    "skill:clean": "rm -f skill/awcp-skill.zip"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SII-Holos/awcp.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "agent",
    "a2a",
    "collaboration",
    "workspace",
    "multi-agent",
    "llm"
  ]
}
