# AWCP Experiment - Two Machines Mode (Host Side)
# Run this on the machine that has the workspace data

MODE=host-only

# Host configuration
HOST_PORT=4000
HOST_URL=http://192.168.1.100:4000

# Remote configuration (the other machine)
REMOTE_URL=http://192.168.1.101:4001

# SSH configuration
# Remote will connect to this machine via SSH
SSH_HOST=192.168.1.100
SSH_PORT=22
SSH_USER=awcp

# Scenario / Workspace
SCENARIO=basic
WORKSPACE_PATH=./scenarios/${SCENARIO}/workspace

# Logging
LOG_LEVEL=info
