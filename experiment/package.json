{
  "name": "awcp-experiment",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AWCP Protocol Experiment Environment",
  "scripts": {
    "build": "tsc",
    "host": "tsx src/host/index.ts",
    "remote": "tsx src/remote/index.ts",
    "delegate": "tsx src/cli.ts delegate",
    "status": "tsx src/cli.ts status",
    "start-local": "concurrently -n host,remote -c blue,green \"npm run host\" \"npm run remote\"",
    "clean-mounts": "tsx src/cli.ts clean"
  },
  "dependencies": {
    "@awcp/core": "^0.1.0",
    "@awcp/sdk": "^0.1.0",
    "@awcp/transport-sshfs": "^0.1.0",
    "express": "^4.21.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0"
  }
}
